<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="Primary">red</Color>
    <Color x:Key="PrimaryDark">#FFC107</Color>
    <Color x:Key="Accent">#00BCD4</Color>

    <Color x:Key="GreyBackground">#42433E</Color>
    <Color x:Key="LightBackground">White</Color>
    <Color x:Key="DarkBackground">Black</Color>

    <Color x:Key="CardBackground">White</Color>
    <Color x:Key="CardBackgroundDark">#1C1C1E</Color>

    <Color x:Key="LabelText">Black</Color>
    <Color x:Key="LabelTextDark">White</Color>

</ResourceDictionary>